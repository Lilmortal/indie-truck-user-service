{
    "compilerOptions": {
        "outDir": "./build/dist/",
        "strict": true,
        "sourceMap": true,
        "pretty": true,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es6",
        "lib": [
            "es2015",
            "es2016",
            "es2017.object",
            "es2017.string"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}